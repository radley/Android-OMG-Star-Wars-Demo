<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/detail_padding"
    android:paddingLeft="@dimen/detail_padding"
    android:paddingRight="@dimen/detail_padding"
    android:paddingBottom="48dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Overline.Detail"
            android:layout_width="wrap_content"
            android:text="@string/opening_crawl" />

        <TextView
            android:id="@+id/opening_crawl"
            style="@style/TextView.Detail"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/detail_padding"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Overline.Detail"
            android:layout_width="match_parent"
            android:text="@string/release_date" />

        <TextView
            android:id="@+id/release_date"
            style="@style/TextView.Detail"
            android:layout_width="match_parent" />

        <TextView
            style="@style/TextView.Overline.Detail"
            android:layout_width="match_parent"
            android:text="@string/director" />

        <TextView
            android:id="@+id/director"
            style="@style/TextView.Detail"
            android:layout_width="match_parent" />

        <TextView
            style="@style/TextView.Overline.Detail"
            android:layout_width="match_parent"
            android:text="@string/producer" />

        <TextView
            android:id="@+id/producer"
            style="@style/TextView.Detail"
            android:layout_width="match_parent" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="32dp" />

</LinearLayout>
